@model Vektorel.Cinemom.Models.Entities.Movie

<!--Yeni film -->
<div class="col">
    <div class="card shadow-sm">
        <img src="@Url.Action("GetImage", "Home", new { id = Model.Id})" class="bd-placeholder-img card-img-top" />
        <div class="card-body">
            <h6>@Model.Title</h6>
            <p class="card-text">@Model.Description</p>

            <div class="d-flex align-items-center mb-3">
                <span class="text-warning">
                    @for (int i = 1; i <= 10; i++)
                    {
                        if (Model.Rating >= i)
                        {
                            <i class="bi bi-star-fill"></i>
                        }
                        else
                        {
                            <i class="bi bi-star"></i>
                        }
                    }
                </span>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a href="@Url.Action("Support", "Home")" class="btn btn-sm btn-outline-secondary">Katkıda Bulun</a>
                </div>
                <small class="text-body-secondary">@Model.PublishedYear</small>
            </div>
        </div>
    </div>
</div>