@model LoginViewModel
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-lg rounded">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Giriş Yap</h4>
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.Error</div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta</label>
                            <input type="email" asp-for=EMail class="form-control" id="email" name="email" required placeholder="E-posta adresiniz">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Şifre</label>
                            <input type="password" asp-for=Password class="form-control" id="password" name="password" required placeholder="Şifreniz">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                    </form>

                    <hr />
                    <div class="text-center">
                        <a href="/Auth/Register">Hesabınız yok mu? Kayıt Ol</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>